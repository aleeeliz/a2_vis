{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 435,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/aleeeliz/hw_w10/refs/heads/main/data3.csv"
  },
  "params": [
    {
      "name": "gender_select",
      "value": "M",
      "bind": {
        "input": "select",
        "options": ["M", "F"],
        "labels": ["Male", "Female"],
        "name": "Gender Selection:"
      }
    }
  ],
  "transform": [
    {"filter": "datum.spf > 0"},
    {"filter": "gender_select == null || datum.gender == gender_select"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "age", "type": "nominal", "title": "Age group", "axis":{"labelAngle":0}},
    "y": {
      "field": "spf",
      "type": "quantitative",
      "title": "Percentage of people",
      "scale": {"domain": [0, 70]}
    },
    "color": {"value": "#fa9107"},
    "tooltip": [
      {"field": "age", "type": "nominal", "title": "Age"},
      {"field": "gender", "type": "nominal", "title": "Gender"},
      {"field": "spf", "type": "quantitative", "title": "% of people"}
    ]
  },
  "config": {
    "view": {"stroke": null}, 
    "axis": {"grid": false}, 
    "background": "#fff4df"}
}